<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.nt.entity.Employee" table="HQL_EMPLOYEE">
		<!-- singular id cfg -->
		<id name="eno" type="int">
			<generator class="increment" />
		</id>
		<!-- Other mapping file configuration -->
		<property name="ename" type="string" not-null="true"
			unique-key="true" length="25"></property>
		<property name="eadd" type="string" length="25"></property>
		<property name="salary" type="float"></property>
	</class>
	
	<sql-query name="GET_EMPS_BY_SAL_RANGE">
		<return class="com.nt.entity.Employee" />
	<![CDATA[ SELECT ENO,ENAME,EADD,SALARY FROM HQL_EMPLOYEE WHERE SALARY>=? AND SALARY<=? ]]>
	</sql-query>
	<sql-query name="GET_EMPS_BY_ADDRS">
	<return-scalar column="ENO" type="int"/>
	<return-scalar column="EADD" type="string"/>
	SELECT ENO,ENAME,EADD FROM HQL_EMPLOYEE WHERE EADD=:addrs
	</sql-query>
</hibernate-mapping>