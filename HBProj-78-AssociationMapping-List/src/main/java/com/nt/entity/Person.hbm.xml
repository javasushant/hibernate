<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
  <hibernate-mapping>
 <class name="com.nt.entity.Person" table="OTM_UNI_PERSON_LIST">
 	<id name="pid" type="int">
 	<generator class="sequence"/>
 	</id>
 	<property name="pname" type="string" length="30"/>
 	<property name="paddrs" type="string" length="30" />
 	
 	<list name="accounts" cascade="all-delete-orphan" lazy="extra">
 		<key column="PERSON_ID"/>
 		<list-index  column="LIST_INDEX" base="1"/>
 		<one-to-many class="com.nt.entity.BankAccount"/>
 	</list>
 </class>
  
  </hibernate-mapping>
  
 